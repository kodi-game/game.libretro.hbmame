<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.hbmame"
		name="Arcade (HBMAME)"
		version="0.220.0.3"
		provider-name="Robbbert,MAMEdev">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>chd|cmd|zip|7z</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">Arcade (HBMAME) 0.220</summary>
		<description lang="en_GB">HBMAME stands for Home Brew MAME. It is an emulator of homebrew and hacked games for arcade hardware.

Supported files: .chd, .cmd, .zip, .7z</description>
		<license>GPLv2+</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.hbmame</source>
	</extension>
</addon>
